{
  "name": "@prodfact/amy",
  "version": "1.0.3",
  "description": "A CLI tool that converts natural language commands into executable shell commands using AI",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "amy": "./dist/bin/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsx bin/cli.ts",
    "prepublishOnly": "npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "cli",
    "ai",
    "shell",
    "command",
    "openai",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "openai": "^6.3.0",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "@types/node": "^24.7.2",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  }
}
